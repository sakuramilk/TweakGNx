<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="rom_label_category">
        <PreferenceScreen
            android:key="rom_label_text"
            android:title="@string/label" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="rom_system_category"
        android:title="@string/rom_system_category">
        <ListPreference
            android:key="rom_system_part_list"
            android:title="@string/rom_partition" />
        <ListPreference
            android:key="rom_system_img_list"
            android:title="@string/rom_image"
            android:entries="@array/rom_img_menu_entries"
            android:entryValues="@array/rom_img_menu_values" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="rom_data_category"
        android:title="@string/rom_data_category">
        <ListPreference
            android:key="rom_data_part_list"
            android:title="@string/rom_partition" />
        <ListPreference
            android:key="rom_data_img_list"
            android:title="@string/rom_image"
            android:entries="@array/rom_img_menu_entries"
            android:entryValues="@array/rom_img_menu_values" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="rom_kernel_category"
        android:title="@string/rom_kernel_category">
        <ListPreference
            android:key="rom_kernel_part_list"
            android:title="@string/rom_partition" />
        <ListPreference
            android:key="rom_kernel_img_list"
            android:title="@string/rom_kernel_image"
            android:entries="@array/rom_kernel_img_menu_entries"
            android:entryValues="@array/rom_kernel_img_menu_values" />
    </PreferenceCategory>

</PreferenceScreen>
